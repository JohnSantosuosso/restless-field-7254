<h1>Flights</h1>

<%@flights.each do |flight|%>
<div id="flight-<%= flight.id %>">
  <%=flight.number%>
  <%=flight.airline.name %>
  <%flight.passengers.each do |passenger| %>
    <%= passenger.name %>
    <%= button_to "Remove Passenger #{passenger.name}", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %>
  <%end%>
</div>
<%end%>